<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neighbourhood"/>

    <Spinner
        android:id="@+id/spinner_neigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </Spinner>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_neighbourhoods_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_price_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Min"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "

            android:textStyle="bold"
            android:textSize="20sp"/>/>
        <EditText
            android:id="@+id/et_price_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Max"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_rooms_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Rooms"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort by price"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/imgbtn_descending_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/down_icon"
            android:scaleType="fitCenter"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/imgbtn_ascending_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/up_icon"
            android:scaleType="fitCenter"
            android:layout_height="match_parent" />

    </LinearLayout>
</LinearLayout>