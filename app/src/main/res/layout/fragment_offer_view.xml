<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.radomonov.homeless.fragments.ViewOfferFragment">

    <LinearLayout
        android:id="@+id/offer_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_offer_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

        </android.support.v4.view.ViewPager>

        <ImageView
            android:id="@+id/img_view_offer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_like_this_offer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Like this offer"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



        <TextView
            android:id="@+id/text_rooms_neigborhood_offer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x-rooms, Neigborhood"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#111111"
            android:background="@drawable/input_outline"
            />

        <TextView
            android:id="@+id/text_price_per_month_offer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price per month"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#111111"
            android:background="@drawable/input_outline"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/text_description_offer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#111111"
            android:background="@drawable/input_outline"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:text="Posted by:"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/profile_pic_view_offer"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_profile"
                    />
                <TextView
                    android:id="@+id/tv_user_name_view_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#111111"
                    />
            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Contact owner:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:id="@+id/btn_call_to_owner_offer_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:src="@drawable/call_btn"
                />

            <ImageView
                android:id="@+id/btn_write_an_email_offer_info"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:src="@drawable/email_btn_konvert"
                />

        </LinearLayout>



    </LinearLayout>




</ScrollView>
